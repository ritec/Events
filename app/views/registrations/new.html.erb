<header id="content-header">
	<h1>Registration for <%= link_to @events.namre, @events %></h1>
</header>


<%= form_for([@events, @registrations]) do |f| %>
<%= render 'shared/errors', object: @registrations %>

<fieldset>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name, size: 40, autofocus:true %>
	</p>
	<p>
		<%= f.label :email %> <br />
		<%= f.text_area :email, size: 40 %>
	</p>

	<p>
		<%= f.label :how_heard %> <br />
		<%= f.select :how_heard,
					Registration::HOW_HEARD_OPTIONS,
					prompt: "Pick One" %>
	</p>

	<p>
		<%= f.submit %>
		<%= link_to "Cancel", events_path, class: "button" %>
</fieldset>
<%end%>